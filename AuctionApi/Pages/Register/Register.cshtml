@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<h2>Create Account</h2>

<form method="post">
    <div>
        <label>Email:</label>
        <input asp-for="NewUser.Email" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="NewUser.Password" type="password" />
        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
    </div>
    <button type="submit">Create Account</button>
</form>

<div>
  <a class="btn btn-link" href="/auction/Login">Back to login</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
