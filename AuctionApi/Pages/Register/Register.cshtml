@page "/Register"
@using MyApp.Namespace
@model RegisterPageModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3"><label class="form-label">First Name</label><input name="RegisterModel.FirstName" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Last Name</label><input name="RegisterModel.LastName" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Address</label><input name="RegisterModel.Address" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Postal Code</label><input name="RegisterModel.PostalCode" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">City</label><input name="RegisterModel.City" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Phone Number</label><input name="RegisterModel.PhoneNumber" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Email</label><input name="RegisterModel.EmailAddress" class="form-control" /></div>
    <div class="mb-3"><label class="form-label">Password</label><input name="RegisterModel.Password" type="password" class="form-control" /></div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
