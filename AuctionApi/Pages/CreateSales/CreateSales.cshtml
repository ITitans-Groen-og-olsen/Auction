@page "/CreateSales"
@model CreateSalesModel
@{
    ViewData["Title"] = "Opret Salgsforslag";
}

@* if (!User.Identity?.IsAuthenticated ?? true) *@
@if (false) // Pretend we are logged in
{
    <div class="alert alert-warning">Du skal være logget ind for at foreslå et produkt.</div>
}
else
{
    <h2>Opret Salgsforslag</h2>

    <form method="post">
    <div class="mb-3">
        <label for="Name" class="form-label">Titel</label>
        <input asp-for="Product.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Beskrivelse</label>
        <textarea asp-for="Product.Description" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
        <label for="Brand" class="form-label">Mærke</label>
        <input asp-for="Product.Brand" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Image" class="form-label">Billede (URL)</label>
        <input asp-for="Product.Image" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="StartPrice" class="form-label">Mindstepris</label>
        <input asp-for="Product.StartPrice" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="EndOfAuction" class="form-label">Deadline</label>
        <input asp-for="Product.EndOfAuction" type="datetime-local" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Send Forslag</button>
</form>

    @if (Model.Submitted)
    {
        <div class="alert alert-success mt-3">Dit forslag er sendt til godkendelse.</div>
    }
}
