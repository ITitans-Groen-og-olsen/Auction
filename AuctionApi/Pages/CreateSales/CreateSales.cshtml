@page "/auction/AddProduct"
@model AddProductModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Opret Salgsforslag";
}

@if (false) // Simulate logged in
{
    <div class="alert alert-warning">Du skal være logget ind for at foreslå et produkt.</div>
}
else
{
    <h2>Opret Salgsforslag</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label">Titel</label>
            <input asp-for="Product.Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label">Beskrivelse</label>
            <textarea asp-for="Product.Description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Brand" class="form-label">Mærke</label>
            <input asp-for="Product.Brand" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Upload billede</label>
            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" required />
        </div>

        <div class="mb-3">
            <label asp-for="Product.StartPrice" class="form-label">Mindstepris</label>
            <input asp-for="Product.StartPrice" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Product.EndOfAuction" class="form-label">Deadline</label>
            <input asp-for="Product.EndOfAuction" type="datetime-local" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Send Forslag</button>
    </form>

    @if (Model.Submitted)
    {
        <div class="alert alert-success mt-3">Dit forslag er sendt til godkendelse.</div>
    }
}
