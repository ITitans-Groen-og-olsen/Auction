@page "/AddProduct"
@model AddProductModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Opret Salgsforslag";
}

<!-- Show warning if user is not logged in -->
@if (false) // Simulate logged in 
{
    <div class="alert alert-warning">Du skal være logget ind for at foreslå et produkt.</div>
}
else
{
    <h2>Opret Salgsforslag</h2>

<!-- Product submission form -->
    <form method="post" enctype="multipart/form-data">
        @* @Html.AntiForgeryToken() *@
        
        <div class="mb-3">
            <label name="Product.Name" class="form-label">Titel</label>
            <input name="Product.Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label name="Product.Description" class="form-label">Beskrivelse</label>
            <textarea name="Product.Description" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label name="Product.Brand" class="form-label">Mærke</label>
            <input name="Product.Brand" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="ImageFile" class="form-label">Upload billede</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
        </div>

        <div class="mb-3">
            <label name="Product.StartPrice" class="form-label">Mindstepris</label>
            <input name="Product.StartPrice" type="number" step="0.01" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Send Forslag</button>
    </form>

 <!-- Success message -->
    @if (Model.Submitted)
    {
        <div class="alert alert-success mt-3">Dit forslag er sendt til godkendelse.</div>
    }
}
