@page "/Auction/AddProduct"
@model ImageUploadModel
@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form method="post" enctype="multipart/form-data">
    <label>Name:</label>
    <input asp-for="Name" />
    <br />

    <label>Start Price:</label>
    <input asp-for="StartPrice" type="number" step="0.01" />
    <br />

    <label>Image:</label>
    <input asp-for="UploadedImage" type="file" />
    <br />

    <button type="submit">Create</button>
</form>

@if (!string.IsNullOrEmpty(Model.Base64Image))
{
    <h3>Image Preview</h3>
    <img src="@Model.Base64Image" alt="Uploaded Image" style="max-width:300px; max-height:300px;" />
}

