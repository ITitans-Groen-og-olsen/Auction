@page "/UserDashboard"
@model MyApp.Namespace.UserDashboardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "User Dashboard";
}

<h2>Velkommen, @Model.User?.FirstName @Model.User?.LastName</h2>

<h3>Dine aktive bud</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Auktions titel</th>
            <th>Dit bud</th>
            <th>Højeste bud</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.ActiveBids)
    {
        var yourBid = product.BidHistory?
            .Where(b => b.BidderId == Model.User.CustomerNumber)
            .OrderByDescending(b => b.BidAmount)
            .FirstOrDefault()?.BidAmount ?? 0;

        var status = product.EndOfAuction < DateTime.Now
            ? (product.CurrentBidder == Model.User.CustomerNumber ? "Vundet" : "Tabt")
            : "I gang";

        <tr>
            <td>@product.Name</td>
            <td>@yourBid.ToString("C")</td>
            <td>@(product.CurrentBid?.ToString("C") ?? "-")</td>
            <td>@status</td>
        </tr>
    }
    </tbody>
</table>

<!-- Modal Trigger -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#profileModal">
    Rediger Profil
</button>

<!-- Modal -->
<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Update">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="profileModalLabel">Opdater Profil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Luk"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="UpdateForm.FirstName" class="form-label">Fornavn</label>
                        <input name="UpdateForm.FirstName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateForm.LastName" class="form-label">Efternavn</label>
                        <input name="UpdateForm.LastName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateForm.EmailAddress" class="form-label">Email</label>
                        <input name="UpdateForm.EmailAddress" class="form-control" />
                    </div>
                    <input type="hidden" asp-for="UpdateForm.Id" />
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Gem ændringer</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Luk</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
